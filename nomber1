#include <iostream>
#include <vector>
using namespace std;

int main() 
{
    setlocale(LC_ALL, "");
    vector<int> sequence; 
    int n; 

    cout << "Введите количество чисел в последовательности: ";
    cin >> n;

    cout << "Введите " << n << " чисел:\n";
    for (int i = 0; i < n; ++i) 
    {
        int num;
        cin >> num;
        sequence.push_back(num);
    }

    if (sequence.empty())
    {
        cout << "Последовательность пуста.\n";
        return 1;
    }

    int minNumber = sequence[0]; 
    int minCount = 1; 

    for (int i = 1; i < sequence.size(); ++i) 
    {
        if (sequence[i] < minNumber)
        {
            minNumber = sequence[i];
            minCount = 1;
        }
        else if (sequence[i] == minNumber)
        {
            minCount++;
        }
    }

    cout << "Минимальное число: " << minNumber << endl;
    cout << "Количество повторений минимального числа: " << minCount << endl;

    return 0;
}
