#include <iostream>

int main()
{
    setlocale(LC_ALL, "");
    int arr[] = { 1, 3, 6, 9, 12, 15, 18, 21 };
    int n = sizeof(arr) / sizeof(arr[0]); 

    std::cout << "Содержимое массива:\n";
    for (int i = 0; i < n; i++) 
{
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    int sum = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] % 3 == 0) {
            sum += arr[i];
        }
    }

    
    std::cout << "Количество чисел в массиве: " << n << std::endl;
    std::cout << "Сумма элементов массива, кратных 3: " << sum << std::endl;

    return 0;
}
